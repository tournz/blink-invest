<div class="navbar navbar-expand-sm navbar-light navbar-lewagon shadow-sm">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://image.freepik.com/free-vector/3d-isometric-cube_119708-18.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item active text-center " style="width: 5.5rem">
          <%= link_to "Projects", projects_path, class: "btn"%>
        </li>
        <li class="nav-item active text-center mx-4" style="width: 5.5rem">
          <%= link_to "Portfolio", portfolio_path, class: "btn"%>
        </li>
        <li class="nav-item active text-center mx-4" style="width: 5.5rem">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn"%>
        </li>
        <li class="nav-item dropdown ">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
