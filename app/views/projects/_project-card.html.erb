<div class="card-project">
  <div class="row no-gutters upper-section" >
    <div class="col-6 name-section text-center m-auto p-2">
      <p class="card-small-text"><%= @project.location %></p>
      <h3 class="card-title-project"><%= @project.name %></h3>
    </div>
    <div class="col-6 ">
      <%= cl_image_tag @project.banner_picture.key, height: 95, width: 250, crop: :fill %>
    </div>
  </div>

  <div class="row middle-section" >
    <div class="col-6 fin-info-section">
        <div class="row m-auto">
          <div class="fin-stat col-6">
            <p class="numbers">9.5%</p>
            <p class="card-small-text">Target Net IRR</p>
          </div>
          <div class="fin-stat col-6">
            <p class="numbers"><%= (@project.net_cash_yield * 100).round(2) %>%</p>
            <p class="card-small-text">Net Cash Yield</p>
          </div>
        </div>
        <div class="row m-auto pt-3">
          <div class="fin-stat col-6">
            <p class="numbers"><%= @project.net_equity_multiple %>x</p>
            <p class="card-small-text">Net Equity Multiple</p>
          </div>
          <div class="fin-stat col-6">
            <p class="numbers"><%= @project.target_hold %> Years</p>
            <p class="card-small-text">Target Hold</p>
          </div>
        </div>
      <div class="container mt-3">
        <p class="card-small-text"><%= @project.percentage_subscribed * 100 %>%</p>
        <p class="card-small-text">Commited</p>
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: <%= @project.percentage_subscribed * 100 %>%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <p></p>
      </div>
    </div>
    <div class="col-6 map-section">
      <p class="text-center card-small-text"><%= @project.location %></p>
      <%# MAP %>
        <%= render 'projects/map-card-index', locales: { project: @project } %>
      <%# END of MAP %>
    </div>
  </div>

  <div class="row bottom-section">
    <div class="col-6">
      <%= link_to "See details", @project, class:"btn button-style btn-block rounded-0" %>
    </div>
    <div class="col-6 m-auto">

      <p class="text-center card-small-text"><%= @project.crop %></p>
    </div>
  </div>

</div>
