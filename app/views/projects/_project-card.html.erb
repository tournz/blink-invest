<div class="card-project ml-4 mr-0">
    <%= cl_image_tag @project.banner_picture.key, crop: :fill, class:"card-image" %>
    <h3 class="text-center card-title-project pt-3"><%= @project.name %></h3>
    <p class="text-center index-card-small-text"><%= @project.location %></p>

    <div class="row m-auto px-3">
      <div class="fin-stat col-6 text-center">
        <p class="numbers-index-page "><%= (@project.target_net_irr * 100).round(2) %>%</p>
        <p class="index-card-small-text mt-1">Target Net IRR</p>
      </div>
      <div class="fin-stat col-6 text-center">
        <p class="numbers-index-page "><%= (@project.net_cash_yield * 100).round(2) %>%</p>
        <p class="index-card-small-text mt-1">Net Cash Yield</p>
      </div>
    </div>

    <div class="row m-auto pt-0">
      <div class="fin-stat col-6 text-center">
        <p class="numbers-index-page "><%= @project.net_equity_multiple %>x</p>
        <p class="index-card-small-text mt-1">Net Equity Multiple</p>
      </div>
      <div class="fin-stat col-6 text-center">
        <p class="numbers-index-page "><%= @project.target_hold %> Years</p>
        <p class="index-card-small-text mt-1">Target Hold</p>
      </div>
    </div>

    <div class="progress" style="height: 8px;">
      <div class="progress-bar" role="progressbar" style="width: <%= @project.percentage_subscribed * 100 %>%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <%= link_to "See details", @project, class:"btn-block btn button-style rounded-bottom" %>

</div>
